<div class="container mt-5">
  <h1>Edit Your Teaching Profile</h1>
  <hr>
  <form action="/users?_method=PUT" method="POST">

    {{> edit-profile}}

    <div class="mb-3 fs-4">
      <label for="teachingStyle" class="form-label">Your Teaching Style:</label>
      <textarea id="teachingStyle" name="teachingStyle" class="form-control" rows="4"
        placeholder="Please fill in your teaching style here." required>{{user.teacher.teachingStyle}}</textarea>
    </div>

    <div class="mb-3 fs-4">
      <label for="lessonDescription" class="form-label">Lesson Description:</label>
      <textarea id="lessonDescription" name="lessonDescription" class="form-control" rows="4"
        placeholder="Please fill in your lesson description here." required>{{user.teacher.lessonDescription}}</textarea>
    </div>

    <div class="mb-3 fs-4">
      <label for="lessonDuration" class="form-label">Single Class Duration (minutes):</label>
      <select id="lessonDuration" name="lessonDuration" class="form-select" required>
        <option value="60" {{#ifCond user.teacher.lessonDuration 60}} selected {{/ifCond}}>60</option>
        <option value="90" {{#ifCond user.teacher.lessonDuration 90}} selected {{/ifCond}}>90</option>
      </select>
    </div>

    <div class="mb-3 fs-4">
      <label for="videoLink" class="form-label">Lesson's Video Link:</label>
      <input type="url" id="videoLink" name="videoLink" class="form-control"
        placeholder="Please provide a valid video link." value="{{user.teacher.videoLink}}" required />
    </div>

    {{!-- Submit Button --}}
    <button type="submit" class="btn btn-primary">Submit</button>

  </form>
</div>

{{!-- Avatar Preview Script --}}
<script src="/javascripts/avatar-preview.js"></script>